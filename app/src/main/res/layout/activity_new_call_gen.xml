<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#02A4FD"
    tools:context=".NewCallGen">

    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Your Region:  Mumbai"
        android:textColor="#ffffff"
        android:textSize="23sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/e1"
        android:layout_width="370dp"
        android:layout_height="56dp"

        android:layout_above="@+id/t2"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-95dp"
        android:background="@layout/shape"
        android:ems="10"
        android:gravity="center"
        android:hint="    City of service"
        android:inputType="textPersonName"
        android:textSize="25dp" />


    <EditText
        android:id="@+id/e2"
        android:layout_width="370dp"
        android:layout_height="56dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="147dp"
        android:background="@layout/shape"
        android:ems="10"
        android:gravity="center"
        android:hint="    Name of Service engineer"
        android:inputType="textPersonName"
        android:textSize="25dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="50dp"
        android:layout_height="31dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="52dp"
        app:srcCompat="@drawable/city" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="52dp"
        android:layout_height="22dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="162dp"
        app:srcCompat="@drawable/user" />

    <EditText
        android:id="@+id/e3"
        android:layout_width="370dp"
        android:layout_height="56dp"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/t3"
        android:background="@layout/shape"
        android:ems="10"
        android:gravity="center"
        android:hint="    Clients Name"
        android:inputType="textPersonName"
        android:textSize="25dp" />


    <TextView
        android:id="@+id/t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="108dp"
        android:text="Enter Your Name"
        android:textColor="#ffffff"
        android:textSize="23sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="16dp" />


    <TextView
        android:id="@+id/t3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="215dp"
        android:text="Enter Client's Name"
        android:textColor="#ffffff"
        android:textSize="23sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="16dp" />


</RelativeLayout>